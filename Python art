thickness = 5
c = 'H'
for i in range(thickness):
    print((c * i).rjust(thickness - 1 )+ c + (c * i).ljust(thickness -1 )) # .rjust- Выравниванеи по левому краю.Создание треугольника
for i in range(thickness):
    print((c *thickness ).center(thickness *2)+ (c *thickness).center(thickness *6)) #thickness *6- увелечение пространства между столбцами
for i in range((thickness+1)//2): #Это необходимо для того чтобы строк было 3
    print((c * thickness*5).center(thickness * 6 ))
for i in range(thickness):
    print((c *thickness ).center(thickness *2)+ (c *thickness).center(thickness *6))
for i in range(thickness):
    print(((c*(thickness-i-1)).rjust(thickness) + c + (c*(thickness-i-1)).ljust(thickness)).rjust(thickness*6))